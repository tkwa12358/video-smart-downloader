# Auto detect text files and perform LF normalization
* text=auto

# Rust
*.rs text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Binaries
*.exe binary
*.dmg binary
*.app binary
